include toc
+make_toc(false)

.sidebar.animated
  .sidebar-top
    .logo-title
      .title
        if theme.logo_type == 'polygon'
          .logo(style=theme.logo_style)
            .polygon-box1
              .polygon-box2
                img.polygon-img(src=url_for(theme.logo_dir), alt="logo")
        else
          img.other-img(src=url_for(theme.logo_dir), style=theme.logo_style, alt="logo")

        h3(title="",style="margin: 2rem;")
          a(href="/")= config.title
        if theme.description
          .description
            p!= theme.description
      include social_links

    include toc
    +make_toc(true)

  include footer
